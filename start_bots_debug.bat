@echo off
echo ================================================================================
echo Запуск InfoBot в режиме отладки
echo ================================================================================
echo.
echo Сначала останавливаем старый процесс на порту 5001...
echo.

REM Убиваем процесс на порту 5001
for /f "tokens=5" %%a in ('netstat -ano ^| findstr :5001 ^| findstr LISTENING') do (
    echo Убиваем процесс PID: %%a
    taskkill /F /PID %%a >nul 2>&1
)

echo.
echo ================================================================================
echo Запускаем сервер...
echo ================================================================================
echo.

python bots.py

pause

